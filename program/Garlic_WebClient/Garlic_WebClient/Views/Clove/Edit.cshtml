        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.c_id)

        <div class="form-group">
            @Html.LabelFor(model => model.c_name, htmlAttributes: new { @class = "control-label col-md-2" })
