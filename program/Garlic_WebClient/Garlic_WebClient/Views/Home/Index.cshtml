        <ul>
            @foreach (var property in Model) {
                foreach (var clove in property.Cloves) {
                    <li>
                        @*Html.ActionLink(clove.c_name, "Index", "Home", new { clove = clove.c_name }, new { })*@
                    </li>
                }
            }
        </ul>-->

        @using (Html.BeginForm()) {
            <div class="form-horizontal">
                @Html.ListBox("clove", null, htmlAttributes: new { @class = "form-control" })
                <input type="submit" value="Switch" class="btn btn-default" />
            </div>
        }

    </div>
</div>
