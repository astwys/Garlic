@model Garlic_WebClient.Models.p_posts

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Your Article</h2>


<fieldset>
    @using (Html.BeginForm("EditArticle", "Read", new { post_id = ViewBag.id })) {
        <div class="form-horizontal">
            <div class="form-group">
                <div class="control-label col-md-2" style="font-weight: bold">ID</div>
                <div class="col-md-10">
                    @ViewBag.id
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2" style="font-weight: bold">Clove</div>
                <div class="col-md-10">
                    @Html.DropDownList("clove", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2" style="font-weight: bold">Title</div>
                <div class="col-md-10">
                    @Html.Editor("atitle", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2" style="font-weight: bold">Content</div>
                <div class="col-md-10">
                    @Html.TextArea("content", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</fieldset>
<div>
    @Html.ActionLink("Cancel", "Index", new { article_id = ViewBag.id })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
